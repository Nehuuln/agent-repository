{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
<a href="{{ path("home") }}" class="back-button">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="bi bi-arrow-left">
        <path d="M19 12H5"></path>
        <path d="M12 19l-7-7 7-7"></path>
    </svg>
</a>

<div class="container my-5">
    <h1 class="text-center mb-4">{{ category.name }} - Agents</h1>

    <div class="row">
        {% for agent in agents %}
            <div class="col-md-4 mb-4">
                <div class="agent-card">
                    <a href="{{ path('agent_show', { id: agent.id }) }}" class="text-decoration-none">
                        <img src="{{ agent.profile }}" alt="{{ agent.name }}" class="card-img-top img-fluid">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{ agent.name }}</h5>
                        </div>
                    </a>
                </div>
            </div>
        {% else %}
            <p>Aucun agent trouvé dans cette catégorie.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
