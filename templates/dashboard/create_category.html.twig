{% extends 'base.html.twig' %}

{% block title %}Créer une catégorie{% endblock %}

{% block body %}
<a href="{{ path('dashboard') }}" class="back-button">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="bi bi-arrow-left">
        <path d="M19 12H5"></path>
        <path d="M12 19l-7-7 7-7"></path>
    </svg>
</a>
<div class="category-add-page">
    <h1 class="category-add-title">Créer une catégorie</h1>

    {{ form_start(form, {'attr': {'class': 'category-form'}}) }}
        <div class="category-form-fields">
            {{ form_widget(form) }}
        </div>
        <button type="submit" class="btn-submit">Créer</button>
    {{ form_end(form) }}
</div>
{% endblock %}
